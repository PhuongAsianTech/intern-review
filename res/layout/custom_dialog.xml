<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color.background_dialog" >

    <LinearLayout
        android:id="@+id/llbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" 
        android:layout_marginTop="20dp"
        >
       <TextView 
           android:id="@+id/btnDialogOk"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="@string/button.text.ok"
           android:background="@drawable/custom_view_button_dialog"
           android:textColor="@color/color.button_save_cancel"
           android:layout_weight="1"
           android:gravity="center"
           />
       <TextView 
           android:id="@+id/btnDialogCancel"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="@string/button.text.cancel"
           android:background="@drawable/custom_view_button_dialog"
           android:textColor="@color/color.button_save_cancel"
           android:layout_weight="1"
           android:gravity="center"
           />
    </LinearLayout>

</RelativeLayout>