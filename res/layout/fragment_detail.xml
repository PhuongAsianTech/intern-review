<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color.background_fragment"
     >
     <RelativeLayout
        android:id="@+id/rlMenuActionBar"
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:background="@color/color.background_menu_actionbar" >

        <ImageView
            android:id="@+id/imgIcRowsActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rows_actionbar" />

        <TextView
            android:id="@+id/ivTitleActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/textview.text.title_menu_actionbar"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rlLayoutTitle"
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:layout_below="@id/rlMenuActionBar"
	    >
	    <ImageView 
	        android:id="@+id/imgPersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_listview_item6"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        />
	    <TextView 
	        android:id="@+id/tvNamePersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/textview.text.name_persion"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/imgPersion"
	        android:layout_marginLeft="20dp"
	        android:textSize="15dp"
	        />
	    <View 
	        android:id="@+id/v"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@color/color.color_line"
	        android:layout_alignParentBottom="true"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/rlInput"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rlLayoutTitle"
	    android:layout_marginTop="30dp"
	    >
	    <EditText 
	        android:id="@+id/edtUserName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/edittext.hint.username"
	        android:textSize="13dp"
	        android:paddingLeft="20dp"
	        android:background="@drawable/custom_view_line"
	        />
	    <EditText 
	        android:id="@+id/edtDescription"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edtUserName"
	        android:hint="@string/edittext.hint.description"
	        android:textSize="13dp"
	        android:paddingLeft="20dp"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/custom_view_line"
	        
	        />
	    
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/llLayoutButton"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:weightSum="2"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/btnSave"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:text="@string/button.text.save"
	        android:textColor="@color/color.button_save_cancel"
	        android:layout_weight="1"
	        android:textSize="13dp"
	        android:background="@drawable/custom_view_line"
	        android:gravity="center"
	        />
	     <TextView 
	        android:id="@+id/btnCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:text="@string/button.text.cancel"
	        android:textColor="@color/color.button_save_cancel"
	        android:layout_weight="1"
	        android:textSize="13dp"
	        android:background="@drawable/custom_view_line"
	        android:gravity="center"
	        />
	</LinearLayout>	
</RelativeLayout>
